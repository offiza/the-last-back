// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Player statistics for leaderboard
model PlayerStats {
  id          String   @id @default(cuid())
  playerId    String   @unique // Telegram user ID
  playerName  String
  totalGames  Int      @default(0)
  totalWins   Int      @default(0)
  totalScore  Int      @default(0)
  bestScore   Int      @default(0)
  lastPlayed  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([totalWins])
  @@index([bestScore])
  @@index([totalScore])
  @@map("player_stats")
}

// Match records
model Match {
  id          String   @id @default(cuid())
  roomType    String   // 'free' | 'stars' | 'ton'
  status      String   // 'waiting' | 'playing' | 'finished'
  currentRound Int     @default(0)
  rounds      Int      @default(3)
  startedAt   DateTime?
  finishedAt  DateTime?
  createdAt   DateTime @default(now())

  // Relations
  players     MatchPlayer[]
  payments    Payment[]

  @@index([roomType, status])
  @@index([finishedAt])
  @@map("matches")
}

// Players in matches
model MatchPlayer {
  id          String   @id @default(cuid())
  matchId     String
  playerId    String   // Telegram user ID
  playerName  String
  score       Int      @default(0)
  isWinner    Boolean  @default(false)
  leftEarly   Boolean  @default(false) // If player left before match finished
  joinedAt    DateTime @default(now())
  leftAt      DateTime?

  // Relations
  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)

  @@index([matchId])
  @@index([playerId])
  @@index([isWinner])
  @@map("match_players")
}

// Payment records
model Payment {
  id              String   @id @default(cuid())
  matchId         String?
  playerId        String   // Telegram user ID
  playerName      String
  amount          Decimal  @db.Decimal(10, 2)
  currency        String   // 'stars' | 'ton'
  paymentType     String   // 'entry' | 'payout'
  status          String   // 'pending' | 'completed' | 'failed'
  signature       String?  // Cryptographic signature for verification
  verified        Boolean  @default(false)
  invoiceUrl      String? // For Stars payments
  transactionHash String? // For TON payments
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  completedAt     DateTime?

  // Relations
  match           Match?   @relation(fields: [matchId], references: [id], onDelete: SetNull)

  @@index([playerId])
  @@index([matchId])
  @@index([status])
  @@index([currency])
  @@index([paymentType])
  @@map("payments")
}
